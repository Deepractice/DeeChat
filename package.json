{
  "name": "deechat",
  "version": "1.0.0",
  "description": "DeeChat - Chat is All You Need | Powered by PromptX",
  "main": "dist/main/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && NODE_ENV=development electron dist/main/main/index.js",
    "prebuild:promptx": "node scripts/prebuild-promptx.js",
    "build": "npm run prebuild:promptx && npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:all": "npm run build && electron-builder",
    "generate-icons": "node scripts/generate-icons.js",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "ai",
    "promptx",
    "desktop"
  ],
  "author": "PromptX Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.9",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jest": "^30.0.4",
    "sharp": "^0.34.3",
    "ts-jest": "^29.4.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.15.5",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@langchain/anthropic": "^0.3.24",
    "@langchain/core": "^0.3.62",
    "@langchain/google-genai": "^0.2.14",
    "@langchain/openai": "^0.5.18",
    "@modelcontextprotocol/sdk": "^1.17.1",
    "@reduxjs/toolkit": "^2.0.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/eventsource": "^1.1.15",
    "@types/styled-components": "^5.1.34",
    "@types/ws": "^8.18.1",
    "antd": "^5.12.8",
    "better-sqlite3": "^12.2.0",
    "crypto-js": "^4.2.0",
    "electron-log": "^5.4.1",
    "eventsource": "^4.0.0",
    "https-proxy-agent": "^7.0.6",
    "langchain": "^0.3.29",
    "openai": "^4.20.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.0.4",
    "styled-components": "^6.1.19",
    "tar": "^7.4.3",
    "ws": "^8.18.3",
    "zod": "^3.25.76"
  },
  "build": {
    "appId": "com.deepractice.deechat",
    "productName": "DeeChat",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      }
    ],
    "icon": "build/icon.png",
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity"
    },
    "win": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "sign": false,
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "icon": "build/icon.png",
      "target": "AppImage"
    }
  }
}
